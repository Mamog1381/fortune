# Production Environment Configuration
# Copy this file to .env and update with your production values

# Django Settings
SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_HERE
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,YOUR_VPS_IP

# Database Configuration (CHANGE THE PASSWORD!)
DATABASE_URL=postgresql://postgres:STRONG_PASSWORD_HERE@db:5432/coffee_fortune_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# OpenRouter AI API Configuration
OPENROUTER_API_KEY=sk-or-v1-YOUR_ACTUAL_API_KEY_HERE

# OTP Configuration
OTP_EXPIRY_SECONDS=120

# SMS Provider Configuration
SMS_PROVIDER=faraz

# Faraz SMS Settings (https://farazsms.com)
# Get these from your Faraz panel: https://panel.ippanel.com
FARAZ_API_KEY=your-faraz-api-key-here
FARAZ_ORIGINATOR=your-10-digit-number-here
FARAZ_PATTERN_CODE=your-pattern-code-here

# CORS Configuration (Add your frontend domains)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Email Configuration for Notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Security Settings for HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Database Connection Pooling
DB_CONN_MAX_AGE=600

# Logging Level
LOG_LEVEL=INFO
